<Window x:Class="GeofizApp.ChangeProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена проекта" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Name="WellsList" AutoGenerateColumns="True" SelectionMode="Single" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="ConfirmButton" Content="Выбрать" Width="100" Click="ConfirmButton_Click" />
            <Button Content="Отмена" Width="100" Margin="10,0,0,0" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
