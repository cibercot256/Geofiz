<Window x:Class="GeofizApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Geofiz" Height="600" Width="1000">
    <Grid>
        <TextBox Name="SearchBox" Width="200" Height="30" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <Button Content="Поиск" Width="80" Height="30" HorizontalAlignment="Left" Margin="220,10,0,0" Click="Search_Click"/>

        <DataGrid Name="ProjectDataGrid" Margin="10,50,700,10"/>

        <Button Content="График" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Click="OpenGraph_Click"/>

        <Button Name="SwitchProjectButton" Content="Сменить проект" Width="120" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SwitchProject_Click"/>

        <Button Name="EditProjectButton" Content="Добавление скважины" Width="120" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40" Click="EditProject_Click"/>

        <Button Name="DeleteProjectButton" Content="Удалить проект" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,40" Click="DeleteProject_Click"/>
    </Grid>
</Window>
