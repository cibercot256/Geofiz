<Window x:Class="GeofizApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="250" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Имя пользователя:"/>
        <TextBox x:Name="UsernameBox" Margin="0,5,0,10"/>

        <TextBlock Text="Роль:"/>
        <ComboBox x:Name="RoleComboBox" Margin="0,5,0,10">
            <ComboBoxItem Content="Админ"/>
            <ComboBoxItem Content="Геофизик"/>
            <ComboBoxItem Content="Аналитик"/>
        </ComboBox>

        <Button Content="Войти" Click="Login_Click" Height="30"/>
    </StackPanel>
</Window>